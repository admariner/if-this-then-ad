{
  "name": "iftta",
  "description": "If This Then Ad",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "node index.ts",
    "compile": "npx tsc",
    "pre-build": "rm -rf ../dist",
    "build": "tsc && npm run lint",
    "post-build": "cd ../dist && npm install",
    "lint": "npx tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static": "mkdir -p ../dist/static && cp -R static/ ../dist/static/ && cp package* ../dist",
    "build-prod": "npm run pre-build && npm run build && npm run copy-static && npm run post-build",
    "build-dist": "npm run pre-build && npm run compile && npm run copy-static && npm run post-build",
    "serve": "node ../dist/index.js",
    "test": "jest"
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "author": "Google LLC",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.10",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint-config-google": "^0.14.0",
    "prettier": "^2.5.0",
    "eslint": "^8.3.0",
    "typescript": "^4.5.2",
    "jest": "^27.3.1"
  }
}
