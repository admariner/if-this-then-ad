{
  "name": "iftta",
  "description": "If This Then Ad",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "compile": "npx tsc",
    "reset": "rm -Rf dist && rm -Rf node_modules",
    "build": "npx tsc && npm run lint",
    "post-build": "cd dist/ && npm install",
    "lint": "npx tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static": "cp -R public dist/ && cp package* dist/",
    "build-local": "npm install --production=false && npm run build && npm run copy-static && npm run post-build",
    "build-dist": "npm i typescript && npm run compile && npm run copy-static && npm run post-build",
    "serve": "node dist/index.js",
    "w-typescript": "npx tsc -w",
    "w-node": "nodemon dist/index.js",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run w-typescript\" \"npm run w-node\""
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "author": "Google LLC",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.10",
    "express": "^4.17.1",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.2"
  }
}
