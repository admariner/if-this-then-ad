{
  "name": "if-this-then-ad",
  "env": {
    "GOOGLE_CLIENT_ID": {
      "description": "OAuth 2.0 Client ID",
      "required": true,
      "order": 1
    },
    "GOOGLE_CLIENT_SECRET": {
      "description": "OAuth 2.0 Client Secret",
      "required": true,
      "order": 2
    }
  },
  "options": {
    "allow-unauthenticated": false
  },
  "build": {
    "skip": true
  },
  "hooks": {
    "prebuild": {
      "commands": ["./setup/pre-build.sh"]
    },
    "postbuild": {
      "commands": ["./setup/post-build.sh"]
    },
    "postcreate": {
      "commands": ["./setup/post-create.sh"]
    }
  }
}
